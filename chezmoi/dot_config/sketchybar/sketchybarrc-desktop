#!/usr/bin/env zsh

# Load color scheme
source "$HOME/.config/sketchybar/colors.sh"
source "$HOME/.config/sketchybar/icons.sh"

FONT_FACE="TX02 Nerd Font Mono"
PLUGIN_DIR="$HOME/.config/sketchybar/plugins-desktop"
PLUGIN_SHARED_DIR="$HOME/.config/sketchybar/plugins"

sketchybar --bar \
    height=32 \
    color=$COLOR_BAR_BG \
    margin=0 \
    sticky=on \
    padding_left=0 \
    padding_right=0 \
    notch_width=188 \
    display=main

sketchybar --default \
    background.height=32 \
    icon.color=$COLOR_TEXT_DARK \
    icon.font="$FONT_FACE:Medium:22.0" \
    icon.padding_left=5 \
    icon.padding_right=5 \
    label.color=$COLOR_TEXT_DARK \
    label.font="$FONT_FACE:Bold:14.0" \
    label.y_offset=1 \
    label.padding_left=0 \
    label.padding_right=5

sketchybar --add item current_space left \
    --set current_space \
    background.color=$COLOR_CURRENT_SPACE \
    icon.font="$FONT_FACE:Medium:28.0" \
    label.drawing=off \
    script="$PLUGIN_SHARED_DIR/current_space.sh" \
    --subscribe current_space space_change mouse.clicked

sketchybar --add item front_app left \
    --set front_app \
    background.color=$COLOR_FRONT_APP \
    background.padding_left=0 \
    background.padding_right=0 \
    icon.y_offset=1 \
    label.drawing=no \
    script="$PLUGIN_SHARED_DIR/front_app.sh" \
    --add item front_app.separator left \
    --set front_app.separator \
    background.color=$COLOR_TRANSPARENT \
    icon= \
    icon.color=$COLOR_FRONT_APP \
    icon.font="$FONT_FACE:Bold:25.0" \
    icon.padding_left=0 \
    icon.padding_right=0 \
    icon.y_offset=0 \
    label.drawing=no \
    --add item front_app.name left \
    --set front_app.name \
    background.color=$COLOR_TRANSPARENT \
    icon.drawing=off \
    label.font="$FONT_FACE:Bold:16.0" \
    label.color=$COLOR_TEXT_LIGHT \
    label.padding_left=5

sketchybar --add bracket front_app_bracket \
    front_app \
    front_app.separator \
    front_app.name \
    --subscribe front_app front_app_switched


sketchybar --add item clock right \
    --set clock \
    icon=$ICON_CLOCK \
    background.color=$COLOR_CLOCK \
    update_freq=10 \
    script="$PLUGIN_SHARED_DIR/clock.sh"

sketchybar --add item github_prs right \
    --set github_prs \
    icon=$ICON_GIT \
    background.color=$COLOR_BLUE \
    update_freq=300 \
    script="$PLUGIN_SHARED_DIR/github_prs.sh" \
    --subscribe github_prs mouse.clicked

# Add network_update event for network monitoring
sketchybar --add event network_update

sketchybar --add item network.up right \
    --set network.up \
    icon="󰕒" \
    icon.color=$COLOR_TEXT_LIGHT \
    icon.font="$FONT_FACE:Bold:14.0" \
    icon.padding_right=0 \
    label="000 MB/s" \
    label.color=$COLOR_TEXT_LIGHT \
    label.font="$FONT_FACE:Bold:11.0" \
    label.padding_left=2 \
    label.width=60 \
    y_offset=5 \
    width=0 \
    script="$PLUGIN_SHARED_DIR/network.sh" \
    --subscribe network.up network_update \
    --add item network.down right \
    --set network.down \
    icon="󰇚" \
    icon.color=$COLOR_TEXT_LIGHT \
    icon.font="$FONT_FACE:Bold:14.0" \
    icon.padding_right=0 \
    label="000 MB/s" \
    label.color=$COLOR_TEXT_LIGHT \
    label.font="$FONT_FACE:Bold:11.0" \
    label.padding_left=2 \
    label.width=60 \
    y_offset=-5 \
    width=0 \
    script="$PLUGIN_SHARED_DIR/network.sh" \
    --subscribe network.down network_update \
    --add item network.padding right \
    --set network.padding \
    label.drawing=off \
    icon.drawing=off \
    width=5 \
    --add bracket network.bracket \
    network.up \
    network.down \
    network.padding \
    --set network.bracket \
    background.color=$COLOR_TRANSPARENT \
    background.corner_radius=5 \
    background.height=26

# Media item (media-control)
sketchybar --add event media_stream_changed \
    --add item media right \
    --set media \
    icon=$ICON_MUSIC \
    icon.y_offset=0 \
    label.drawing=on \
    label.padding_left=3 \
    script="$PLUGIN_SHARED_DIR/media.sh" \
    --subscribe media media_stream_changed mouse.clicked

##### Finalizing Setup #####
sketchybar --update
sketchybar --trigger space_change